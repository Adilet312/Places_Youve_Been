@using PlacesYouveBeen.Models;
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Create a Custom Postcard!</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
<h1>Places Visited</h1>
@if (Model.Count == 0)
{
  <p>There are no places in the list.</p>
}
<ul>
    @foreach (Place place in Model )
    {
      
      <li> @place.toString()</li>
      <img src=@place.getPictureLink() />
    } 
  
</ul>
@* @Model.toString() *@
@* string str = @Model.getPictureLink(); *@
<a href="/places/new">Add a new place.</a> 
 
<form action="/places/delete" method="post">
  <button type="submit" class="btn btn-info" name="button">Clear All Places</button>
</form>
<form action="/places/show" method="get">
  <label for="findId">Find place by ID</label>
  <input id="findId" name="findId" type="number">
  <button type="submit" class="btn btn-info">Find Place</button>
</form>
@* <a href="/toDoListPath/new">Add a new place.</a> *@
@* <a href="/">Go Home</a> *@
</body>
</html>